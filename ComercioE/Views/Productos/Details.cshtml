@model ComercioE.Models.Producto

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div class="row">
    <div class="col-md-6">
        <div>
            <h4>Producto</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Categoria.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Categoria.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Compania.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Compania.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Impuesto.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Impuesto.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.BarCode)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BarCode)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Precio)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Imagen)
                </dt>

                <dd>
                    @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                        <img src="@Url.Content(Model.Imagen)" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Comentarios)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Comentarios)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ProductoId }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
    <div class="col-md-6">
        <h4>Inventario</h4>
        <hr />
        @if (Model.Inventarios.Count == 0)
        {
            <h4>No Hay Inventario Registrado Aún</h4>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                       Bodega
                    </th>
                    <th>
                        Stock(Cantidad)
                    </th>
                </tr>

                @foreach (var item in Model.Inventarios.ToList())
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bodega.Nombre)
                        </td>
                        <td align="right">
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                       
                    </tr>
                }
                
                <tr>
                    <td>
                       <strong>Total</strong>
                    </td>
                    <td align="right">
                        <strong>@Html.DisplayFor(model => model.Stock)</strong> 
                    </td>

                </tr>
            </table>

        }
    </div>
    
</div>